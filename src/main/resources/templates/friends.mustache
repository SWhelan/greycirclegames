{{> header}}
<form class="form-horizontal" action="{{FRIENDS_ADD_ROUTE}}" method="post">
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Friend Email or Username:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="searchValue" id="searchValue" placeholder="Email or Username" value="{{searchValue}}">
    </div>
  </div>
  <button type="submit" class="btn btn-primary btn-lg btn-block">Add a New Friend</button>
</form>
<br />
{{#friends}}
<div class="row">
	<a href="{{FRIENDS_ROUTE}}/{{_id}}">
		<div class="col-md-4">
			<p class="friendLink">{{email}}</p>
		</div>
		<div class="col-md-4">
			<form class="form-horizontal" action="{{FRIENDS_REMOVE_ROUTE}}" method="post">
				<input type="hidden" name="friendId" id="friendId" value="{{_id}}">
				<button type="submit" class="btn btn-default">Remove Friend</button>
			</form>
		</div>
	</a>
</div>
<hr>
{{/friends}}
{{> footer}}